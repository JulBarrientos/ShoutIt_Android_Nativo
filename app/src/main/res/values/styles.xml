<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button.SignIn" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_margin">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.SignIn.Facebook" parent="AppTheme.Button.SignIn">
        <item name="colorButtonNormal">@color/colorFacebook</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableStart">@drawable/ic_facebook_logo_white</item>
        <item name="android:text">@string/signInFB_button</item>
    </style>

    <style name="AppTheme.Button.SignIn.Google" parent="AppTheme.Button.SignIn">
        <item name="android:colorButtonNormal">@color/white</item>
        <item name="android:drawableStart">@drawable/ic_google_logo_colored</item>
        <item name="android:text">@string/signInGG_button</item>
    </style>
    
    <style name="AppTheme.Button.SignIn.Email" parent="AppTheme.Button.SignIn">
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableStart">@drawable/ic_email</item>
        <item name="android:text">@string/createAccount</item>
    </style>

</resources>
